= form_for @paper_type do |f|
  - if @paper_type.errors.any?
    #error_explanation
      h2 = "#{pluralize(@paper_type.errors.count, "error")} prohibited this paper_type from being saved:"
      ul
        - @paper_type.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :name
    = f.text_field :name
  .actions = f.submit 'Save'
